{% extends 'base.html.twig' %}

{% block title %}Objectif{% endblock %}

{% block body %}
<h1>{{ goal.category.name }}</h1>
<br>
<hr>
<br>

<h4>Objectif : {{ goal.description }}</h4>
<br>
<h5>Date limite : {{ goal.deadline ?
    goal.deadline|format_datetime('full', 'short', locale: 'fr') : 'Pas de date limite' }}</h5>
<br>
<h6>Status : {{ goal.isAchieved ? 'Atteint' : 'Non atteint' }}
    {% if goal.isAchieved %}
    <span class="material-icons" style="color: green; vertical-align: middle;">check_circle</span>
    {% else %}
    <span class="material-icons" style="color: red; vertical-align: middle;">cancel</span>
    {% endif %}
</h6>

<br><br>

<div class="container-flex-between">
    <a href="{{ path('goal_edit', {'id':goal.id}) }}" class="custom-btn">Modifier</a>
    <br>
    <br>
    <a href="{{ path('goal_delete', {'id': goal.id}) }}" class="custom-btn btn-danger"
        onclick="return confirm('Êtes-vous sûr(e) de vouloir supprimer cet objectif ?')">Supprimer</a>
</div>
<br>
<br>
<a href="{{ path('goal_index') }}" class="custom-btn">Retour à la liste</a>
{% endblock %}