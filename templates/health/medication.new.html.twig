{% extends "base.html.twig" %}

{% block title %}Ajouter traitement{% endblock %}

{% block body %}

<h1>Ajouter un nouveau traitement</h1>

<div class="row">
  <div class="col s12">
    <div class="row">
      <div class="input-field col s12">
        {{ form_start(form) }}
        {{ form_label(form.name) }}
        {{ form_widget(form.name) }}
        {{ form_label(form.dosage) }}
        {{ form_widget(form.dosage) }}
        <br>
        <br>
        {{ form_widget(form.submit) }}
        {{ form_end(form) }}
      </div>
    </div>
  </div>
</div>

{% endblock %}